# (Borlandish) Makefile for apsim solute module

# APSROOT needs to be defined here if you don't specify it on the commmand line. eg.
#APSROOT=c:\progra~1\apsim33
#APSROOT=c:\development

# Platform specific defns
!include $(APSROOT)\APSBuild\platform.make

# Fortran compiler defns
!include $(APSROOT)\APSBuild\fortran.make

# The statically linked components of the engine interface
!include $(APSROOT)\APSBuild\ApsimComponentInterface.make

# Main target
source: ..\lib\solute.dll
..\lib\solute.dll: Registrations.obj solute.obj $(STATICLINKEDOBJECTS) 
	$(ECHO) $(STATICLINKEDOBJECTS) > linker.tmp
	$(ECHO) $(F90FLAGS) >> linker.tmp
	$(ECHO) $(F90LIBS) >> linker.tmp
	$(LF95) solute.obj Registrations.obj \
 -export Main,wrapperDLL,respondToEvent,alloc_dealloc_instance,getInstance -exe ..\lib\solute.dll @linker.tmp
	$(RM) linker.tmp
   
solute.obj: solute.for
Registrations.obj: Registrations.f90
Registrations.f90: ..\solute.interface 
	$(APSROOT)\bin\CreateComponentInterfaceSource.exe ..\solute.interface

clean:
	$(RM) ..\lib\solute.dll Registrations.obj Registrations.f90 solute.obj solute.imp

