#=======================================================================
#-----------------------------------------------------------------------
#     Makefile for APSIM graz module
#-----------------------------------------------------------------------
#=======================================================================

DESTDIR ?= /usr/local/apsim

LIB=	../lib/graz.so

SRC=	graz.for

STATICOBJ=	../../../Shared/ComponentInterface/SimpleWrapper.o \
            ../../../Shared/ComponentInterface/EntryPoints.o   \
            ../../../Shared/ComponentInterface/FORTRANComponentWrapper.o   \
            ../../../Shared/ComponentInterface/FORTRANdatatypes.o   \
            ../../../Shared/ComponentInterface/datatypes.o

OBJ=	Registrations.o graz.o		\
	$(STATICOBJ)

#-----------------------------------------------------------------------
# Compiler options

FC=		lf95
CPPFLAGS=	-I$(APSROOT)/apsim/infra/source		\
		-I$(APSROOT)/apsim/croptemp/source	\
		-M$(APSROOT)/apsim/infra/source 	\
		-M$(APSROOT)/apsim/croptemp/source $(CPPDEBUGFLAGS)

FFLAGS=		--tp -nco --o0 --pca -nsav -trace -nchk -nin \
		--ml cdecl --staticlink

#-----------------------------------------------------------------------
# Required libraries

LDFLAGS=	-L$(APSROOT)/lib		\
		-L$(APSROOT)/apsim/infra/lib	 \
		-L$(APSROOT)/apsim/croptemp/lib	$(LDDEBUGFLAGS)

LIBS=		-lComponentInterface -lcroptemp -lapsinfra 

#-----------------------------------------------------------------------
# The rules

all: $(LIB)

$(LIB):	$(OBJ)
	g++ $(OBJ) -o $(LIB) -shared $(LDFLAGS) $(LIBS)

FORCE:

clean:
	rm -f *.o *.mod

clobber:	clean
	rm -f $(LIB)

install: all
	if [ ! -d $(DESTDIR)/apsim/graz/lib ]; then mkdir -p $(DESTDIR)/apsim/graz/lib; fi 
	cp $(LIB) $(DESTDIR)/apsim/graz/lib

%.o:	%.for
	$(FC) $(CPPFLAGS) $(FFLAGS) -c -o $@ $<

%.o:	%.f90
	$(FC) $(CPPFLAGS) $(FFLAGS) -c -o $@ $<

Registrations.o: Registrations.f90
Registrations.f90: ../graz.interface 
	$(APSROOT)/Bin/CreateComponentInterfaceSource ../graz.interface
