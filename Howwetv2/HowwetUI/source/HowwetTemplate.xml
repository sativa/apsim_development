<simulations name="HowWet">
  <simulation name="HowWet">
    <clock name="clock">
      <start_date name="start_date" description="Select the start date of the simulation" type="date"></start_date>
      <end_date name="end_date" description="Select the end date of the simulation" type="date"></end_date>
    </clock>
    <summaryfile name="summaryfile">
      <filename name="filename"></filename>
    </summaryfile>
    <metfile name="met">
      <filename name="filename"></filename>
    </metfile>
    <area name="paddock">
      <registrations name="global" />
      <surfaceom name="surface organic matter">
        <PoolName description="Organic Matter pool name">wheat</PoolName>
        <type description="Organic Matter type">wheat</type>
        <mass description="Initial surface residue (kg/ha)">1000.</mass>
        <cnr description="C:N ratio of initial residue">80.0</cnr>
        <standing_fraction description="Fraction of residue standing">0.0</standing_fraction>
      </surfaceom>
      <outputfile name="outputfile">
        <filename name="filename"></filename>
        <outputfiledescription name="My Variables">
          <variables>
            <variable name="SoilWater" variablename="sw" module="" arrayspec=" " description="Soil water - layered (mm/mm)" array="T" />
            <variable name="Day" variablename="day" module="global" arrayspec=" " description="Day" ModuleType="registrations" />
            <variable name="Rainfall" variablename="rain" module="global" arrayspec=" " description="Rainfall (mm)" ModuleType="registrations" />
            <variable name="SurfaceOrganicMatter" variablename="surfaceom_wt" module="surface organic matter" arrayspec=" " description="Total mass of all surface organic materials" ModuleType="surfaceom" />
            <variable name="Runoff" variablename="runoff" arrayspec=" " description="Runoff (mm)" />
            <variable name="Evapoation" variablename="es" arrayspec=" " description="Evaporation (mm)" />
            <variable name="SoilWaterTopLayer" variablename="sw" arrayspec="(1)" description="Soil water - layered (mm/mm)" array="T" />
            <variable name="NO3Total" variablename="no3" arrayspec="()" description="NO3 - layered (kg/ha)" array="T" />
            <variable name="MaxTemp" variablename="maxt" module="global" arrayspec=" " description="Maximum temperature (oC)" ModuleType="registrations" />
            <variable name="Year" variablename="year" module="global" arrayspec=" " description="Year" ModuleType="registrations" />
	          <variable name="SoilLoss" variablename="soil_loss" module="Erosion" arrayspec=" " description="Soil loss (t/ha)" ModuleType="erosion" />
            <variable name="Drain" variablename="drain" module="#000 SampleBlackEarth Water" arrayspec=" " description="Drainage (mm)" />
          </variables>
          <events>
            <event name="global.Daily" description="End of day" module="global" eventname="Daily" ModuleType="registrations" />
          </events>
        </outputfiledescription>
      </outputfile>
	<erosion name="Erosion">
        <model name="model">freebairn</model>
        <slope name="slope">1.0</slope>
        <slope_length name="slope_length">60.0</slope_length>
        <k_factor name="k_factor">0.4</k_factor>
        <p_factor name="p_factor">1.0</p_factor>
        <bed_depth name="bed_depth">3000</bed_depth>
        <profile_reduction name="profile_reduction">off</profile_reduction>
        <profile_layer_merge name="profile_layer_merge">0.05</profile_layer_merge>
        <minimum_depth name="minimum_depth">100.0</minimum_depth>
      </erosion>
    </area>
  </simulation>
</simulations>