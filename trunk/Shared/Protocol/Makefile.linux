#=======================================================================
#-----------------------------------------------------------------------
#     Makefile for Protocol module   
#-----------------------------------------------------------------------
#=======================================================================

LIB=	$(APSROOT)/lib/libprotocol.so

SRC=	Transport.cpp	\
	Computation.cpp

OBJ=	$(SRC:.cpp=.o)

#-----------------------------------------------------------------------
# Compiler options

CC=		/usr/bin/gcc
CPPFLAGS=	-I/usr/include/boost -I$(APSROOT)/Shared 	\
		-I/usr/include/libxml2				\
		-Wno-deprecated -fpermissive -fPIC $(CPPDEBUGFLAGS)


#-----------------------------------------------------------------------
# Required libraries

LDFLAGS=	-L/usr/lib		\
		-L$(APSROOT)/lib $(LDDEBUGFLAGS)

LIBS=		-lApsimShared		\
		-lgeneral		\
		-lxml2 			\
		-lboost_filesystem 	\
		-lboost_date_time 	\
		-lc


#-----------------------------------------------------------------------
# The rules

all: $(LIB)

$(LIB):	$(OBJ)
	$(CC) -shared -o $(LIB) $(OBJ) $(LDFLAGS) $(LIBS)

FORCE:

clean:
	rm -f *.o *.mod

clobber:	clean
	rm -f $(LIB)

install: all



%.o:	%.cpp
	$(CC) $(CPPFLAGS) $(CFLAGS) -c -o $@ $<

