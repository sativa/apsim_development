[run1.report.parameters]
title = Run1 - Long Timing Test
screen_output = off
outputfile  = run1.out /overwrite
summaryfile = run1.sum /overwrite

[run2.report.parameters]
title = Run2 - Long Timing Test
outputfile  = run2.out /overwrite
summaryfile = run2.sum /overwrite

[long.report.parameters]
screen_output = off

module_names=    clock clock
variable_names=  day   year     
variable_alias=  -     -      

module_names=    chickpea chickpea chickpea
variable_names=  yield      biomass  green_biomass
variable_alias=  -        -        -     
units=           -         -       -     

module_names=    mungbean mungbean mungbean
variable_names=  yield    biomass  green_biomass
variable_alias=  -        -        -     
units=           -         -       -     

[long.clock.parameters]
! Start and end date of run (day number of year and year)
simulation_start_day =  1
simulation_start_year = 1887
simulation_end_day =  365
simulation_end_year = 1993

[long.manager.start_of_day]

if day = 130 then
   chickpea sow cultivar = amethyst, plants = 25 (/m2), sowing_depth = 40 (mm)
   irrigate apply amount = 30
   fertiliz apply amount = 40, depth = 10, type = no3_n
endif

if chickpea.stage_name = 'harvest_ripe' or chickpea.plant_status = 'dead' then
   report   do_output
   chickpea harvest
   chickpea end_crop   

endif

if day = 330 then
   mungbean sow cultivar = berken, plants = 25 (/m2), sowing_depth = 40 (mm)
   irrigate apply amount = 30
   fertiliz apply amount = 40, depth = 10, type = no3_n
endif

if mungbean.stage_name = 'harvest_ripe' or mungbean.plant_status = 'dead' then
   report   do_output
   mungbean harvest
   mungbean end_crop   

endif


[sample.manager.end_of_day]

!report do_output


[sample.chickpea.parameters]

   ll    = .230 .240 .240 .250 .260 .270 .280  ! lower limit mm water/mm soil
   xf   = 1.00 1.00 1.00 1.00 1.00 1.00 1.00  ! Weighting factor for root advance
   kl   = 0.08 0.08 0.08 0.08 0.05 0.03 0.01  ! Water Extraction Parameter (0-1)

[sample.mungbean.parameters]

   ll    = .230 .240 .240 .250 .260 .270 .280  ! lower limit mm water/mm soil
   xf   = 1.00 1.00 1.00 1.00 1.00 1.00 1.00  ! Weighting factor for root advance
   kl   = 0.08 0.08 0.08 0.08 0.05 0.03 0.01  ! Water Extraction Parameter (0-1)
